{
  "name": "af-initials-avatar",
  "version": "0.0.6",
  "description": "A highly specialized function library",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/types/src/index.d.ts",
  "author": "Viacheslav Makarov <npmjs@bazilio.ru>",
  "license": "ISC",
  "scripts": {
    "clean": "shx rm -rf dist/*",
    "build": "tsc -b tsconfig.json tsconfig.esm.json tsconfig.types.json",
    "lint": "eslint . --ext .ts ",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --config jest.config.js",
    "cb": "npm run clean && npm run build && npm run copy-fonts",
    "copy-fonts": "copyfiles -a ./src/fonts/* ./dist/cjs && copyfiles -a ./src/fonts/* ./dist/esm"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/cjs/src",
    "dist/esm",
    "dist/types",
    "src"
  ],
  "keywords": [
    "avatar",
    "initials",
    "generator"
  ],
  "dependencies": {
    "canvas": "^2.11.2",
    "nearest-color": "^0.4.4",
    "string-to-color": "^2.2.2",
    "tinycolor2": "^1.6.0",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/nearest-color": "^0.4.1",
    "@types/node": "^20.12.12",
    "@types/ramda": "^0.30.0",
    "@types/tinycolor2": "^1.4.6",
    "copyfiles": "^2.4.1",
    "eslint-config-af-24": "^2.4.2",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.3",
    "ts-readme": "^1.1.3",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bazilio-san/af-initials-avatar.git"
  },
  "engines": {
    "node": ">= 14",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
